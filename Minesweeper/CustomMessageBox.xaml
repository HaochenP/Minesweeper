<Window x:Class="Minesweeper.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width=" 300" Height="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name ="DisplayImage" Grid.Row="0" Grid.Column="0" Source="/Minesweeper;component/Resources/youdied.jpg" Margin="0" Width="300" Height="250"/>

        <Button x:Name="OkButton" Content="Unlucky really" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="OkButton_Click"/>


    </Grid>

</Window>
